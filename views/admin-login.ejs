<%- include('partials/header') %>

<main id="login-form">
    <form action="/admin/login" method="post">
        <h1>Log In as Teacher</h1>

        <% if(error) { %>
            <p class="error"><%= message %></p>
        <% } %>

        <input type="email" name="adminEmail" id="" value="<%= admin.email %>" placeholder="Email Address" required>
        <input type="password" name="adminPassword" id="" value="<%= admin.password %>" placeholder="Password" required minlength="8">
        <input type="submit" value="Log In">
    </form>
</main>

<%- include('partials/footer') %>